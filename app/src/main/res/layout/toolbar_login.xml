<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#dbd8d8">

    <ImageView
        android:id="@+id/login_back_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:paddingLeft="@dimen/dp30"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_back_black" />
    <TextView
        android:id="@+id/login_machine_name"
        android:paddingLeft="30dp"
        android:text="XXX机台"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/login_title_name"
        android:layout_alignBottom="@+id/login_title_name"
        android:layout_toRightOf="@id/login_back_image" />

    <TextView
        android:id="@+id/login_title_name"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="2018-4-27 13:40" />

    <ImageView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:src="@mipmap/ic_launcher" />

</RelativeLayout>
